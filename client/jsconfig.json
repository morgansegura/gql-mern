{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@node_modules/*": ["../node_modules/*"],
            "@actions/*": ["actions/*"],
            "@auth/*": ["components/auth/*"],
            "@core/*": ["components/core/*"],
            "@layouts/*": ["components/layouts/*"],
            "@styled/*": ["styled/"]
        }
    },
    "include": "src",
    "exclude": ["node_modules"],
    "typeAcquisition": {
        "exclude": [ "dotenv" ]
    }
}
